{
  "manifest_version": 3,
  "name": "easyplay",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "js": ["./scripts/button.script.js"],
      "matches": ["https://www.imdb.com/*", "https://m.imdb.com/*"]
    }
  ]
}
